              {%- case block.type -%}
              {%- when '@app' -%}
                {% render block %}

           
            
              {%- when 'title' -%}
                <h1 class="product__title">
                  {{ product.title | escape }}
                </h1>
                {%- when 'reviews' -%}       
                <div class="custom-reviews a-left hidden-xs d-flex justify-content-between ">          

{% if iva == 0 %}
  <p style="font-size: 14px; margin: 0;">Producto exento de IVA</p>
{% elsif iva == 5 %}
  <p style="font-size: 14px; margin: 0;">Incluye 5% IVA</p>
{% elsif iva == 19 %}
  <p style="font-size: 14px; margin: 0;">Incluye 19% IVA</p>

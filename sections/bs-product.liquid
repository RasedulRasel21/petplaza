                  {{ form | payment_terms }}
                {%- endform -%}
                
              {%- when 'description' -%}
                {%- if product.metafields.product_fields.short_description.value != blank -%}
                  <div class="short-description">
                    {{ product.metafields.product_fields.short_description.value }}

              </div>
              {% comment %} {% render 'free-shipping-banner', threshold_amount: 195000, city: 'Medellín' %} {% endcomment %}
              {% assign iva = product.metafields.custom.iva_tarifa %}
        
             <!-- {% include 'product-wishlist' %}-->
            </form>

{% include 'breadcrumb' %}
<div class="container page-contact no-padding">
  <div class="row">  
    <div class="contact-form col-12">
      <div class="row form-contact">
        <div class="col-lg-4 col-md-4">
          <div class="contact-col-info">
            {% if section.settings.title_info != blank %}
            <div class="title-bonus-page">
              <h2>{{ section.settings.title_info }}</h2>
            </div>
            {% endif %}
            {% if section.settings.contact_text_desc != blank %}
            <div class="contact-des">
              {{ section.settings.contact_text_desc }}
            </div>
            {% endif %}
            <ul class="list-info">
              <li class="item-info main-info">
                <div class="info-content">
                  {%- if section.settings.icon_1 != blank -%}
                  <i class="fa fa-{{ section.settings.icon_1 }}"></i>
                  {% else %}
                  <i class="fa fa-map-marker"></i>
                  {%- endif -%}
                  {% if section.settings.title_1 != blank %}
                  <span class="des-title">{{ section.settings.title_1 }}</span>
                  {% endif %}
                  {% if section.settings.des_1 != blank %}
                  <span class="des-info">{{ section.settings.des_1 }}</span>
                  {% endif %}
                </div>
                
              </li>
              <li class="item-info email-info">
                <div class="info-content">
                  {%- if section.settings.icon_2 != blank -%}
                  <i class="fa fa-{{ section.settings.icon_2 }}"></i>
                  {% else %}
                  <i class="fa fa-envelope"></i>
                  {%- endif -%}
                  {% if section.settings.title_2 != blank %}
                    <span class="des-title">{{ section.settings.title_2 }}</span>
                  {% endif %}
                  {% if section.settings.des_2 != blank %}
                  <span class="des-info"><a href="mailto:{{ section.settings.des_2 }}">{{ section.settings.des_2 }}</a></span>
                  {% endif %}
                </div>
                
              </li>
              <li class="item-info phone">
                <div class="info-content">
                  {%- if section.settings.icon_3 != blank -%}
                  <i class="fa fa-{{ section.settings.icon_3 }}"></i>
                  {% else %}
                  <i class="fa fa-phone"></i>
                  {%- endif -%}
                  {% if section.settings.title_3 != blank %}
                    <span class="des-title">{{ section.settings.title_3 }}</span>
                  {% endif %}
                  {% if section.settings.des_3 != blank %}
                  <span class="des-info"><a href="tel:{{ section.settings.des_3 }}">{{ section.settings.des_3 }}</a></span>
                  {% endif %}
                </div>
                
              </li>
              <li class="item-info open-time">
                <div class="info-content">
                  {%- if section.settings.icon_4 != blank -%}
                  <i class="fa fa-{{ section.settings.icon_4 }}"></i>
                  {% else %}
                  <i class="fa fa-clock-o"></i>
                  {%- endif -%}
                  {% if section.settings.title_4 != blank %}
                    <span class="des-title">{{ section.settings.title_4 }}</span>
                  {% endif %}
                  {% if section.settings.des_4 != blank %}
                  <span class="des-info">{{ section.settings.des_4 }}</span>
                  {% endif %}
                </div>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-lg-8 col-md-8">
          <div class="contact-block">
            {% if section.settings.title_form != blank %}
            <div class="title-bonus-page">
              <h2>{{ section.settings.title_form }}</h2>
            </div>
            {% endif %}
            {% if page.content.size > 0 %}
            <div class="rte">
              {{ page.content }}
            </div>
            {% endif %}
            <div class="contact-form form-vertical">
              <div class="form-des">Your email address will not be published. Required fields are marked <span>*</span></div>
              {% form 'contact' %}

              {% if form.posted_successfully? %}
              <p class="note form-success">
                <i class="fa fa-check"></i>
                {{ 'contact.form.post_success' | t }}
              </p>
              {% endif %}

              {{ form.errors | default_errors }}

              <div class="row">
                <div class="col-12 col-sm-6">
                  <label  for="ContactFormName">{{ 'contact.form.name' | t }}</label>
                  <input type="text" id="ContactFormName" name="contact[name]"  value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">
                </div>
                <div class="col-12 col-sm-6">
                  <label  for="ContactFormEmail" class="{% if form.errors contains 'email' %}label--error{% endif %}">{{ 'contact.form.email' | t }}</label>
                  <input type="email" id="ContactFormEmail" name="contact[email]"  autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" class="{% if form.errors contains 'email' %}input--error{% endif %}">
                </div>
              </div>

              <label for="ContactFormPhone">{{ 'contact.form.phone' | t }}</label>
              <input type="tel" id="ContactFormPhone" name="contact[phone]"   pattern="[0-9\-]*" value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}">

              <label for="ContactFormMessage">{{ 'contact.form.message' | t }}</label>
              <textarea rows="10" id="ContactFormMessage" name="contact[body]">{% if form.body %}{{ form.body }}{% endif %}</textarea>

              <input type="submit" class="btn" value="{{ 'contact.form.submit' | t }}">

              {% endform %}	
            </div>
          </div>	
        </div>

      </div>
    </div>
  </div>

</div>
<div class="google-map"> 
    <div class="contact-map-wrap">
      {% if section.settings.display_google_map %}
      <div class="block-map">
        <div class="block-content">
          {% if section.settings.google_map_code != blank %}
          {{ section.settings.google_map_code }}
          {% endif %}
        </div>
      </div>
      {% endif %}	
    </div>
</div>
<style>
  .footer-container {
    margin-top: 0 !important;
  }
</style>


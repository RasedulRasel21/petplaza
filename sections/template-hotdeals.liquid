{% assign limit_product = section.settings.limit_product %}
{% include 'breadcrumb' %}
<div class="page-hotdeal">
  <div class="container">
    <h1 class="page-title">{{ page.title }}</h1>
    <div class="deal-image">
      {% if section.settings.display_image_cat %}
      <p>
        {% if section.settings.img_cat != blank %}
        <img loading="lazy" src="{{ section.settings.img_cat | img_url :"1650x350", crop:'center'}}" alt="{{ collection.title | split: '|' | first }}" />
        {% else %}
        <img loading="lazy" class="img-responsive" alt="{{ shop.name }}" src="//via.placeholder.com/1650x350" />
        {% endif %}
      </p>
      {% endif %}
    </div>
  
     
       <div class="products-listing ">
      <div class="product-layout grid grid__item">
        {% paginate collections.all.products by 4000 %}
        {% for product in collections['all'].products %} 
        {% for tag in product.tags %}  
        {% if tag contains "deal" %}
        <div class="col-xl-3 col-lg-3 col-sm-4 col-12 product">
          {% include 'product-deal-index' %}
        </div>                            
        {% endif %} 
        {% endfor %}
        {% endfor %}
        {% endpaginate %}
         </div>
    </div>
     
  
  </div>
</div>
{% schema %}
  {
    "name": "Hotdeal Page",
    "settings": [
      {
      "type": "header",
      "content": "Setting Hot deal page"
      },
		{
        "type": "checkbox",
        "id": "display_image_cat",
        "label": "Display Image Category?",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "img_cat",
        "label": "Image Category"
      }
    ],
  "blocks": [
       {
            "type": "product",
            "name": "Add tabs",
            "settings": [
              
          ]
       }
    ]
  }
{% endschema %}

<div class="block widget-recent-blogs">
  <div class="block-title">
    <strong>{{ 'blogs.sidebar.recent_blogs' | t }}</strong>
  </div>

  <div class="block-content">
    <ul>
      {% for article in blog.articles limit: 5 %}
        <li class="article">
          <div class="post-image">
            <a href="{{ article.url }}">
              <img src="{{ article.image.src | img_url: '100px' }}"  alt="{{ article.image.src.alt | escape }}" >
            </a>
          </div>
          <div class="article-info">
            <span>{{ article.published_at | date: '%B %d, %Y' }}</span>
            <a href="{{ article.url }}">
              {{ article.title | strip_html }}
            </a>
          </div>         
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

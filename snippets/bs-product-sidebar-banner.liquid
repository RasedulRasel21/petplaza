<div class="block block-banner no-border">
  <div>
    {% if settings.image_product_sidebar != blank %}

    <a href="{{ settings.image_product_sidebar_link }}" title="">
      <img class="img-responsive lazyload" src="{{ "icon-loadings.svg" | asset_url }}" alt="{{ settings.image_product_sidebar | default: shop.name }}" data-src="{{ settings.image_product_sidebar | img_url: 'master' }}" />
    </a>
    {% else %}
    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>
</div>
<!-- Bottom Block 1 -->
{% if block.settings.bottom_block_1_enable == '1' %}
    <div class="megamenu-column bottom-block" style="width: {{ block.settings.bottom_block_1_width }}">
        {% if block.settings.bottom_block_1_image != blank %}
        <div class="block-image">
            <a href="{{ block.settings.bottom_block_1_image_url }}">
            <img src="{{ block.settings.bottom_block_1_image | image_url: width: 1500 }}"/>
            </a>
        </div>
        {% endif %}
        
        {% if block.settings.bottom_block_1_text != blank %}
        <div class="block-text">
            {{ block.settings.bottom_block_1_text }}
        </div>
        {% endif %}
    </div>
{% endif %}

